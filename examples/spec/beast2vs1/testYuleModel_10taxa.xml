<?xml version="1.0" standalone="yes"?>
<!-- test Yule birth model and Birth Death model per Gernhard 2008-->
<beast version='2.0'
       namespace='beast.pkgmgmt:beast.base.core:beast.base.inference:
       beast.evolution.nuc:beast.base.evolution.alignment:
       beast.base.evolution.operator:beast.base.spec.inference.operator:
       beast.base.spec.evolution.sitemodel:beast.base.spec.evolution.substitutionmodel:
       beast.base.spec.inference.parameter:beast.base.spec.inference.util:
       beast.base.spec.inference.distribution:beast.base.spec.evolution.likelihood'>

    <data id="alignment" dataType="nucleotide">
        <sequence taxon="A">A</sequence>
        <sequence taxon="B">A</sequence>
        <sequence taxon="C">A</sequence>
        <sequence taxon="D">A</sequence>
        <sequence taxon="E">A</sequence>
        <sequence taxon="F">A</sequence>
        <sequence taxon="G">A</sequence>
        <sequence taxon="H">A</sequence>
        <sequence taxon="I">A</sequence>
        <sequence taxon="J">A</sequence>
    </data>

    <input spec='beast.base.spec.evolution.tree.ClusterTree' id='tree' clusterType='upgma'>
        <taxa idref='alignment'/>
    </input>

    <!-- A prior on the distribution node heights defined given                  -->
    <!-- a Yule speciation process (a pure birth process).                       -->
    <input spec='beast.base.spec.evolution.speciation.YuleModel' id="yule">
        <birthDiffRate idref="birthRate"/>
        <tree idref='tree'/>
    </input>

    <parameter id="birthRate" value="2.0" spec="RealScalarParam" domain="PositiveReal"/>

    <run spec='MCMC' chainLength="2000000">
        <state>
            <stateNode idref='birthRate'/>
            <stateNode idref='tree'/>
        </state>

        <distribution id="yule.prior" idref='yule'/>

        <operator spec='SubtreeSlide' weight="1" gaussian="true" size="1.0" tree="@tree"/>

        <logger logEvery="10" fileName="test.$(seed).log">
            <log idref='yule'/>
            <log spec='beast.base.evolution.tree.TreeStatLogger' tree='@tree'/>
            <log idref='birthRate'/>
        </logger>

        <logger logEvery="20000">
            <log idref='yule'/>
            <log spec='beast.base.evolution.tree.TreeStatLogger' tree='@tree'/>
            <log idref='birthRate'/>
        </logger>
    </run>

</beast>
